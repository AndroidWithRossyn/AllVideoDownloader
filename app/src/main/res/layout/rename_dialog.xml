<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_film_name_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/NameYourfile"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFileNameNew"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_film_name_new"></EditText>

    <Button
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
            android:id="@+id/btnDownloadNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        app:backgroundTint="@null"
        android:background="@drawable/gradient_button"
        android:drawableLeft="@drawable/ic_download"
        android:drawablePadding="5sp"
        android:drawableTint="@color/white"
        android:padding="5dp"
        android:text="@string/DownloadNow"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txtFileNameNew" />

</androidx.constraintlayout.widget.ConstraintLayout>