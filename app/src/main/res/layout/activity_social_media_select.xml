<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Activity.SocialMediaSelectActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_50dp"
                android:fontFamily="@font/poppins"
                android:text="@string/socialtxt"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="3">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/facebook"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5dp"
                        android:text="@string/facebook_app_name"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/instagram"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_margin="@dimen/_5dp"
                        android:text="@string/insta_app_name"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/vimeo"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:text="Vimeo"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="3">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/whatsapp"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_margin="@dimen/_5dp"
                        android:text="@string/whatsapp"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/dailymotion"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5dp"
                        android:text="Dailymotion"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/tiktok"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:text="@string/tiktok_app_name"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:weightSum="3">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/snapchat"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5dp"
                        android:text="Snapchat"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:drawableStart="@drawable/twitter"
                        android:drawablePadding="@dimen/_10dp"
                        android:padding="@dimen/_10dp"
                        android:maxLines="1"
                        android:button="@null"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5dp"
                        android:text="@string/twitter_app_name"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_curveselector"
                        android:padding="@dimen/_10dp"
                        android:text="Other"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:button="@null"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/_5dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mTxtcontinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_70dp"
                android:layout_marginVertical="@dimen/_30dp"
                android:background="@drawable/gradientbt"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Continue"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</layout>