<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Activity.DetailActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sp"
            android:layout_marginTop="@dimen/_20sp"
            android:layout_marginEnd="@dimen/_20sp"
            android:layout_marginBottom="@dimen/_20sp"
            android:fontFamily="@font/poppins"
            android:text="Personal Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:fontFamily="@font/poppins"
                android:text="Enter Full Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />

            <EditText
                android:id="@+id/mETFullName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:background="@drawable/ed_selector"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:fontFamily="@font/poppins"
                android:text="Set Username"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />

            <EditText
                android:id="@+id/mETUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:background="@drawable/ed_selector"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:fontFamily="@font/poppins"
                android:text="Enter Your Age"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />

            <EditText
                android:id="@+id/mETAge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:background="@drawable/ed_selector"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:fontFamily="@font/poppins"
                android:text="Select Your Gender"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/maleImg"
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"
                    android:layout_weight="1"
                    android:src="@drawable/anim5_selected"
                    app:civ_border_width="0dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/femaleImg"
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"
                    android:layout_weight="1"
                    android:src="@drawable/anim3"
                    app:civ_border_width="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!--<RadioButton
                        android:id="@+id/mRbtnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="true"
                        android:padding="4dp"
                        android:text="@string/male"
                        android:textAppearance="@style/TextAppearance.MyApp.Body2"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/MyRadioButton" />
-->
                    <TextView
                        android:id="@+id/maletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Male"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Female"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!--<RadioButton
                        android:id="@+id/mRbtnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="false"
                        android:padding="4dp"
                        android:text="@string/female"
                        android:textAppearance="@style/TextAppearance.MyApp.Body2"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/MyRadioButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />-->

                    <TextView
                        android:id="@+id/femaletext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Female"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/mTxtNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_70dp"
                android:layout_marginVertical="@dimen/_30dp"
                android:background="@drawable/gradientbt"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:text="Next"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</layout>